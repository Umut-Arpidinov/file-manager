<resources>

    <style name="appBar">
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textColor">@color/black_4</item>
    </style>

    <style name="hint" >
        <item name="android:textSize">@dimen/text_13sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textColor">@color/black_4</item>
    </style>

    <style name="AppTitleStyle">
        <item name="android:textColor">@color/black_5</item>
        <item name="android:textSize">@dimen/text_32sp</item>
        <item name="android:lineSpacingExtra">@dimen/extra_spacing_6dp</item>
    </style>

    <style name="AppPrimaryStyle">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:lineSpacingExtra">@dimen/extra_spacing_3dp</item>
    </style>

    <style name="AppRegStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:lineSpacingExtra">@dimen/extra_spacing_2dp</item>
    </style>

    <style name="AppTopScreenStyle">
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:lineSpacingExtra">@dimen/extra_spacing_3dp</item>
        <item name="android:textColor">@color/black_4</item>
        <item name="android:textSize">@dimen/text_15sp</item>
    </style>

    <style name="AppDefaultBlueText">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:lineSpacingExtra">@dimen/extra_spacing_3dp</item>
        <item name="android:textColor">@color/blue_1</item>
    </style>

    <style name="FirstPageTitle" parent="AppTitleStyle">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
    </style>

    <style name="Error500Title" parent="AppTitleStyle">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="FirstPagePrimaryText" parent="AppPrimaryStyle">
        <item name="android:textSize">@dimen/text_17sp</item>
        <item name="android:textColor">@color/gray_1</item>
    </style>

    <style name="PrimaryUnderFieldText" parent="AppPrimaryStyle">
        <item name="android:textSize">@dimen/text_13sp</item>
        <item name="android:textColor">@color/black_4</item>
    </style>

    <style name="SentSMSText" parent="AppPrimaryStyle">
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:textColor">@color/black_1</item>
    </style>

    <style name="OTPInputText">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/black_1</item>
        <item name="android:textSize">@dimen/text_17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
    </style>

    <style name="OTPErrorMessage">
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/red_1</item>
    </style>

    <style name="OTPResentButton" parent="OTPErrorMessage">
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textColor">@color/blue_1</item>
    </style>

    <style name="OtpTimer" parent="OTPResentButton">
        <item name="android:textColor">@color/gray_1</item>
    </style>

    <style name="TimerText" parent="AppPrimaryStyle">
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:textColor">@color/gray_1</item>
    </style>

    <style name="ForgetPasswordBlueText" parent="AppDefaultBlueText">
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

    <style name="ErrorUnderInpText" parent="AppPrimaryStyle">
        <item name="android:lineSpacingExtra">@dimen/extra_spacing_2dp</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textColor">@color/red_1</item>
    </style>

    <style name="LicenseRegularText" parent="AppRegStyle">
        <item name="android:textColor">@color/black_5</item>
    </style>

    <style name="licenseTouchableText" parent="AppRegStyle">
        <item name="android:textColor">@color/magenta_1</item>
    </style>

    <style name="buttonTextStyle" parent="AppPrimaryStyle">
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="MyShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_view_12dp</item>
    </style>

    <style name="ShapeAppearanceFirstPage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_view_8dp</item>

    </style>

    <style name="MaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/buttonTextStyle</item>
        <item name="android:insetTop">@dimen/inset_0dp</item>
        <item name="android:insetBottom">@dimen/inset_0dp</item>
    </style>

    <style name="GreenButton" parent="MaterialButton">
        <item name="android:textColor">@color/white_1</item>
        <item name="backgroundTint">@color/color_green_button</item>
        <item name="strokeColor">@color/color_green_button</item>
        <item name="rippleColor">@color/green_4</item>
    </style>

    <style name="GrayButton" parent="MaterialButton">
        <item name="android:textColor">@color/black_1</item>
        <item name="backgroundTint">@color/gray_5</item>
        <item name="strokeColor">@color/gray_5</item>
    </style>

    <style name="progressBarStyle">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/magenta_1</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

</resources>