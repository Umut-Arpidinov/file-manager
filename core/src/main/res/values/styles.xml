<resources>

    <style name="appBar">
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textColor">@color/black_4</item>
    </style>

    <style name="hint" >
        <item name="android:textSize">@dimen/text_13sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textColor">@color/black_4</item>
    </style>

    <style name="AppTitleStyle">
        <item name="android:textColor">@color/black_5</item>
        <item name="android:textSize">@dimen/text_32sp</item>
        <item name="android:lineSpacingExtra">@dimen/extra_spacing_6dp</item>
    </style>

    <style name="AppPrimaryStyle">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:lineSpacingExtra">@dimen/extra_spacing_3dp</item>
    </style>

    <style name="AppRegStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:lineSpacingExtra">@dimen/extra_spacing_2dp</item>
    </style>

    <style name="AppTopScreenStyle">
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:lineSpacingExtra">@dimen/extra_spacing_3dp</item>
        <item name="android:textColor">@color/black_4</item>
        <item name="android:textSize">@dimen/text_15sp</item>
    </style>

    <style name="AppDefaultBlueText">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:lineSpacingExtra">@dimen/extra_spacing_3dp</item>
        <item name="android:textColor">@color/blue_1</item>
    </style>

    <style name="FirstPageTitle" parent="AppTitleStyle">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
    </style>

    <style name="Error500Title" parent="AppTitleStyle">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="FirstPagePrimaryText" parent="AppPrimaryStyle">
        <item name="android:textSize">@dimen/text_17sp</item>
        <item name="android:textColor">@color/gray_1</item>
    </style>

    <style name="PrimaryUnderFieldText" parent="AppPrimaryStyle">
        <item name="android:textSize">@dimen/text_13sp</item>
        <item name="android:textColor">@color/black_4</item>
    </style>

    <style name="SentSMSText" parent="AppPrimaryStyle">
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:textColor">@color/black_1</item>
    </style>

    <style name="TimerText" parent="AppPrimaryStyle">
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:textColor">@color/gray_1</item>
    </style>

    <style name="ForgetPasswordBlueText" parent="AppDefaultBlueText">
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

    <style name="ErrorUnderInpText" parent="AppPrimaryStyle">
        <item name="android:lineSpacingExtra">@dimen/extra_spacing_2dp</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textColor">@color/red_1</item>
    </style>

    <style name="LicenseRegularText" parent="AppRegStyle">
        <item name="android:textColor">@color/black_5</item>
    </style>

    <style name="licenseTouchableText" parent="AppRegStyle">
        <item name="android:textColor">@color/magenta_1</item>
    </style>

</resources>