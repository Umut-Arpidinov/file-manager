<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timer_wrapper"
    android:layout_width="328dp"
    android:layout_height="52dp"
    android:background="@drawable/background_toast_loading"
    android:elevation="1dp">

    <TextView
        android:id="@+id/toastTimer"
        android:layout_width="10dp"
        android:layout_height="13dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="20dp"
        android:text="5"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="28dp"

        android:layout_height="28dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="14dp"
        android:indeterminateDrawable="@drawable/theme_progress_bar_for_toast"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/toastTimerMessage"
        android:layout_width="168dp"
        android:layout_height="14dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="19dp"
        android:text="Message"
        android:textColor="@color/black_1"
        android:textFontWeight="400"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progressBar2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toastTimerButton"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:background="@color/white"
        android:text="Button"
        android:textColor="@color/blue_1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>