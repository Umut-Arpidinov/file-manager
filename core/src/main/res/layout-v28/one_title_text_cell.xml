<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_height_48dp"
    style="?">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:background="@drawable/cell_around_corners">

        <ImageView
            android:id="@+id/iv_cells_icon"
            android:layout_width="31.23dp"
            android:layout_height="31.23dp"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bg_cells_image" />

        <TextView
            android:id="@+id/tv_cell_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:lineHeight="18.75dp"
            android:layout_marginStart="8dp"
            android:text="@string/title_in_cells"
            android:textColor="@color/black_5"
            android:textFontWeight="400"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_cells_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="end"
            android:layout_marginEnd="@dimen/margin_18dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_cell_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:fontFamily="@font/roboto"
                android:lineHeight="18.75dp"
                android:text="@string/cells_info"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="@dimen/margin_12dp"
                android:textColor="@color/gray_1"
                android:textFontWeight="400"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_shevron"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:src="@drawable/arrow_shevron" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>