<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:background="@color/gray_2"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.login.LoginInitialStateFragment">

    <include
        android:id="@+id/included"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        layout="@layout/add_price_cell"
        app:layout_constraintTop_toTopOf="parent"/>
    <kg.o.internlabs.core.custom_views.cells.CustomCompositeCellView
        android:id="@+id/cccv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:setDate="@string/_12_2022"
        app:setDetails="@string/cells_info"
        app:setIcon="@drawable/bg_cells_image" />

    <kg.o.internlabs.core.custom_views.cells.CustomAddPriceCellView
        android:id="@+id/csstcv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        app:layout_constraintTop_toBottomOf="@id/included"
        android:layout_marginTop="@dimen/cells_corner_radius_5dp"
        app:setPriceWithoutCoins="$77."
        app:setPriceWithCoins="47"
        app:isNumberVerified="true"
        app:isODengiAccepted="true"
        app:setIcon="@drawable/bg_cells_image"
        app:setTitle="Мадина" />

    <kg.o.internlabs.core.custom_views.cells.CustomRoundedOneCellLineView
        android:id="@+id/cottcv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_8dp"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        app:layout_constraintTop_toBottomOf="@id/csstcv_1"
        app:position ="SINGLE"
        app:isShevronVisible="true"
        app:setIcon="@drawable/bg_cells_image"
        app:setTitle="@string/title_in_cells" />

    <kg.o.internlabs.core.custom_views.cells.CustomProfileCellView
        android:id="@+id/cbstcv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_8dp"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        app:layout_constraintTop_toBottomOf="@id/cottcv_2"
        app:position="BOTTOM"
        app:setIcon="@drawable/bg_cells_image"
        app:setSubtitle="г. Бишкек"
        app:setTitle="+996 700 000 104" />


    <kg.o.internlabs.core.custom_views.cells.CustomDividerCellView
        android:id="@+id/cdcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_horizontal_8dp"
        android:visibility="gone"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        app:layout_constraintTop_toBottomOf="@id/cbstcv_1"
        app:setButton="@string/all"
        app:setTitle="@string/title_in_cells" />

    <kg.o.internlabs.core.custom_views.cells.CustomFAQCellView
        android:id="@+id/cfaqcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:setQuestions="@string/questions"
        android:layout_marginTop="@dimen/margin_horizontal_8dp"
        app:setAnswers="@string/answer"
        app:layout_constraintTop_toBottomOf="@id/cdcv"/>

</androidx.constraintlayout.widget.ConstraintLayout>